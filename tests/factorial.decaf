class Program {
  int recFactorial(int n){
    if (n == 0) {
      return 1;
    }
    return n *  recFactorial(n - 1);
  }

  int loopFactorial(int n){
    int result;
    int i;

    result = 1;
    i = 2;
    
    while(i <= n){
      result = result * i;
      i = i + 1;
    }
    
    return result;
  }

  void main() {
    int num;
    int result;
    num = 6;

    result = recFactorial(num);
    result = loopFactorial(num);
  }
}